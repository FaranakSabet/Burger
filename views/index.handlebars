<div class="flex flex-wrap">
    <div class="w-full lg:w-1/3 p-5">
        <div class="bg-yellow-300 rounded h-full p-10 shadow-lg flex items-center justify-center">
            <div class="">
                <h2 class="font-bold text-center text-xl my-3"><i class='bx bxs-cart-add'></i> Add a Burger</h2>
                <p class="py-3 text-center">Add a burger to the list to later eat it</p>
                <form class="create-update-form" action="/" method="POST">
                    <div class="form-group">
                        <input type="text" id="ca"
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            placeholder="Burger name" name="burger_name">
                    </div>
                    <br>
                    <button class="w-full font-bold bg-blue-700 text-white p-3 hover:bg-blue-900 rounded" type="submit">
                        Submit Order
                    </button>
                </form>
            </div>
        </div>

    </div>
    <div class="w-full lg:w-1/3 p-5">
        <h2 class="font-bold text-center text-xl my-3">Burgers Available To Eat!</h2>
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="mb-5 bg-yellow-300 p-4 hover:bg-green-600 hover:text-white shadow-lg">
                <div class="flex relative">

                    <form action="/{{this.id}}?_method=POST" method="POST" class="absolute right-0 mr-3 top-0">
                        <input type="hidden" name="devoured" value="true">
                        <button class="bg-red-600 text-white p-1 rounded hover:bg-red-700 font-bold" type="submit"><i
                                class='bx bxs-game'></i> Devour it!
                        </button>
                    </form>

                    <p>
                        🍔
                    </p>
                    <p class="font-semibold">
                        {{this.burger_name}}
                    </p>
                </div>

            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="w-full lg:w-1/3 p-5 ">
        <h2 class="font-bold text-center text-xl my-3">Burgers That Have Been Eaten!</h2>

        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li class="mb-5 bg-yellow-300 p-4 text-center shadow-lg">
                <p class="font-semibold line-through">
                    🍔 {{this.burger_name}}
                </p>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>

</div>